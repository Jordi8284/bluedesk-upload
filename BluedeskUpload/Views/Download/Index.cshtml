@model IEnumerable<BluedeskUpload.Models.Download>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        @Html.TextBox("SearchString")
        <input type="submit" value="Search" id="zoek" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Date", "Index", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th>
            @Html.ActionLink("File", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Upload.Omschrijving)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Upload.Bedrijfsnaam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Upload.Naam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Upload.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Upload.Telefoon)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Upload.Datum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Upload.Bestand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Upload.Omschrijving)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Upload.Bedrijfsnaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Upload.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Upload.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Upload.Telefoon)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.DownloadId }) |*@
                @Html.ActionLink("Details", "Details", new { id = item.DownloadId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DownloadId })
            </td>
        </tr>
    }

</table>

@if (!string.IsNullOrWhiteSpace(ViewBag.SearchString))
{
    <input type="button" value="Back to list" id="back" onclick="location.href='@Url.Action("BackToIndex", "Download")'" />
}